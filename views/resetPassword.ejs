<body>
  <form action="/resetPassword" method="post">
    <h5>Enter token received on entered email:</h5>
    <p style="position: relative">
      <input type="text" id="password" name="token" />
    </p>
    <br />
    <label for="pass" style="width: fit-content">Enter New Password</label>
    <input type="password" name="password" id="pass" />
    <button style="margin: 0.3rem" class="btn btn-primary">
      Verify and Reset Password
    </button>
  </form>
