<body>
  <div class="flex" style="margin: 1rem; margin-bottom: 0;">
    <a href="/" style="display: flex; text-decoration: none !important; color: black">
      <img class="animate__animated animate__zoomIn" src="/favicon.png" alt="" style="height: 80px; float: left" />
      <h2 style="margin: auto 0 auto 1rem">ClientConnect</h2>
    </a>
  </div>
  <div class="container" style="zoom: 90%;">
    <form id="regForm" action="/register" method="post">
      <h1>Register/Sign-Up:</h1>

      <!-- One "tab" for each step in the form: -->
      <div class="tab">
        <div class="flex">
          <!-- <label for="">Name:</label> -->
          <p>
            <input placeholder="Name..." name="name" oninput="this.className = ''" />
          </p>
        </div>
        <div class="flex">
          <!-- <label for="">Email:</label> -->
          <p>
            <input type="email" name="email" placeholder="E-mail..." oninput="this.className = ''" />
          </p>
        </div>
        <div class="flex">
          <!-- <label for="">Password:</label> -->
          <p style="position: relative; display: flex">
            <input type="password" id="password" name="password" placeholder="Password" />
            <i class="fas fa-eye" id="open" style="cursor: pointer" onClick="toggle()"></i>
            <i class="fas fa-eye-slash" id="close" style="display: none; cursor: pointer" onClick="toggle()"></i>
          </p>
        </div>
        <div class="flex">
          <!-- <label for="">Phone No:</label> -->
          <p>
            <input placeholder="Phone..." name="phone" type="text" oninput="this.className = ''" />
          </p>
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Next</button>
      <br>
      <br>
      <p style="color: rgba(0, 0, 0, 0.5); margin: auto">
        Already have an account?&nbsp;<a href="/login">Login</a>
      </p>
    </form>

